<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/backend.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/jquery-ui.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery-ui-1.8.11.min.js")" type="text/javascript"></script>
</head>
<body>
    <div id="wrapper">
        @if (Session.Count != 0)
        {
            if (Session["rol"].ToString() != "usuario")
            {
            <div id="SessionDetails">
                <p class="textSession"> <strong>Usuario Conectado: </strong>@Session["username"]! </p>
                <a href="@Url.Action("LogOff", "Admin")"><img src="../../Content/images/admin/warning.png", alt="Log Off" />Cerrar Sesión</a>
            </div>
            }
        }
		<div id="sitename">
        	<h1 class="title"><img src="../../Content/images/admin/Tools.png" alt="Administrador"/>Blog Prode | Administrador</h1>
			@if (Session.Count != 0)
                { <text> <h6>Acceso Restringido</h6></text> }
		</div>

        <div id="header">
            <div class="tagline"><p>@ViewBag.Message</p></div>
        </div>
        <div id="body" class="clear">
            <div id="content" class="column-right">
                @RenderBody()
            </div>
        </div>
        <div id="footer" class="clear">
                    <p class="left">&copy; Copyright</p> 
                    <p class="right">Desarrollo | Mesa de Ayuda 24hs | @DateTime.Now.ToShortTimeString()</p>
		</div>
    </div>
</body>
</html>