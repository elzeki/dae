@{ 
    ViewBag.Title = "Torneos";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<h2>@TempData["ERROR"]</h2>
<h2>@TempData["MENSAJE"]</h2>

<div><h3>Torneos</h3></div>
Agregar Torneo
<a href="@Url.Action("Agregar", "Torneos")"><img src="../../Content/images/img/add.png" 
                                                 alt="Agregar" class="imageHome" title="Agregar Nuevo Torneo" /></a>
<div>
<table cellpadding="0" cellspacing="0">
	<tr> <th>Id</th> <th>Nombre</th> <th>Opciones</th> </tr>	
	@foreach (var aux in Model)
    {	<tr>
		  <td>@aux.id</td> 
		  <td>@aux.nombre</td>
          <td align="center">
          <a href="@Url.Action("Ver", "Torneos", new { id = @aux.id })" title="Ver Torneo">
                <img src="../../Content/images/img/view.png" alt="Ver Torneo" class="imageHome" /></a>
          <a href="@Url.Action("Editar", "Torneos", new { id = @aux.id })" title="Editar Torneo">
                <img src="../../Content/images/img/edit.png" alt="Editar Torneo" class="imageHome" /></a>
          <a href="@Url.Action("Eliminar", "Torneos", new { id = @aux.id })" class="delete" title="Eliminar Torneo">
                <img src="../../Content/images/img/delete.png" alt="Eliminar Torneo" class="imageHome" /></a>
          </td>
		</tr>
    }
</table>
</div>
<br/><br/>
<a href="@Url.Action("Home", "Admin")"> Volver al ADMINISTRADOR </a>

<script type="text/javascript">
          $('.delete').click(function () {           
            if (confirm('Está seguro que desea eliminar este torneo?')) {
                var $link = $(this);
                $.ajax({
                    url: this.href,
                    type: 'DELETE',
                    success: function (result) {
                        $link.parent().parent().remove();
                    }
                });
            }
            return false;
        });
</script>