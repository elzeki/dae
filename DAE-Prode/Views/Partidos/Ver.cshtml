@{
    ViewBag.Title = "Ver Partido";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>@TempData["ERROR"]</h2>
<h2>@TempData["MENSAJE"]</h2>

<div class="info-view">
<h2>Datos del Partido</h2>
<div id = "izqview">
	<div id = "imagenvie">
	    <div id = "view_img">
            <img src="../../Content/images/admin/partidos.png" alt="Partido" />
        </div>
	</div>
	<div id = "mostrarI">
        <p><strong>ID: </strong>@ViewBag.id</p>
        <p><strong>Equipolocal: </strong>@ViewBag.equipolocal</p>
	    <p><strong>Equipovisita: </strong>@ViewBag.equipovisita</p>
        <p><strong>Goles Local: </strong>@ViewBag.goleslocal</p>
	    <p><strong>Goles Visitante: </strong>@ViewBag.golesvisita</p>
	    <p><strong>Id Fecha Torneo: </strong>@ViewBag.idfechatorneo</p>
        <p><strong>Estadio: </strong>@ViewBag.estadio</p>
	</div>
</div>
</div>
<br/>
<br/> <br/>
<p>@Html.ActionLink("Volver", "Index", "Partidos")</p>